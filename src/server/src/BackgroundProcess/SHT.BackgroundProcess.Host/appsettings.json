{
    "ApplicationUri": "#ENVIRONMENT SPECIFIC#",
    "DataAccessOptions": {
        "EnableLogging": false,
        "EnableSensitiveDataLogging": false,
        "EnableDetailedErrors": false,
        "ConnectionsOptions": {
            "DefaultConnection": "Server=localhost;Database=SHT;Trusted_Connection=True;"
        }
    },
    "LocalizationOptions": {
        "SupportedCultures": [
            "en",
            "ru"
        ],
        "DefaultCulture": "ru"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithEnvironmentUserName"
        ],
        "WriteTo": {
            "FileLogger": {
                "Name": "File",
                "Args": {
                    "path": "./Logs/SHT.BackgroundProcess.Host-.log",
                    "shared": true,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{RequestId}][{EventId}][{SourceContext}] {Message:lj}{NewLine}{Exception}",
                    "rollingInterval": "Day",
                    "rollOnFileSizeLimit": true,
                    "fileSizeLimitBytes": 10485760,
                    "retainedFileCountLimit": null,
                    "restrictedToMinimumLevel": "Information"
                }
            }
        }
    },
    "ExecutionContextOptions": {
        "DefaultSystemEmail": "#ENVIRONMENT SPECIFIC#"
    }
}